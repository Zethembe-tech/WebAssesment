@model CommonDLL.DTO.TransactionsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Transactions Details</h2>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container">
    <h4>Transactions</h4>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="bg-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Account.AccountNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.TransactionDate)</th>
                    <th>@Html.DisplayNameFor(model => model.CaptureDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.Account.AccountNumber)</td>
                    <td>@Html.DisplayFor(model => model.TransactionDate)</td>
                    <td>@Html.DisplayFor(model => model.CaptureDate)</td>
                    <td>@Html.DisplayFor(model => model.Amount)</td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Code }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<p class="mt-3">
    @Html.ActionLink(" Back to List", "Index", null, new { @class = "btn btn-secondary" })
    <i class="bi bi-arrow-left"></i>
</p>
